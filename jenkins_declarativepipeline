pipeline{
    agent any
    stages{
        stage('Continuous_Download'){
            steps{
                git branch: 'main', url: 'https://github.com/sagarchaaro/Maven.git'
            }
        }
        stage('Continuous_Build'){
            steps{
                sh 'mvn package'
            }
        }
        stage('Continuous_Deployment'){
            steps{
                sh 'scp /home/ubuntu/slaveDemo/workspace/Development/webapp/target/webapp.war ubuntu@172.31.13.34:/var/lib/tomcat9/webapps/pipeapp.war'
            }
            
        }
        stage('Continuous_Testing'){
            steps{
                git branch: 'main', url: 'https://github.com/sagarchaaro/FunctionalTesting.git'
                sh 'java -jar /home/ubuntu/.jenkins/workspace/Testing/testing.jar'
            }
        }
        stage('Continuous_Delivery'){
            steps{
                
                sh 'scp /home/ubuntu/slaveDemo/workspace/Development/webapp/target/webapp.war ubuntu@172.31.3.56:/var/lib/tomcat9/webapps/pipeprod.war'
            }
        }
    }
}
